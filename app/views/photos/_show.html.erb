<div class="photo">
  <% if photo.caption %>
    <h2><%= photo.caption %></h2>
  <% end %>
  <br>
  <%= image_tag photo.img.url %>
  
  <div class="photo-like-links group">
    <%= render partial: "likes/show", locals: {object: photo, object_type: "Photo"} %>
  </div>
  
  <div class="tagging">
    <%= render partial: "photos/tagging", locals: { user: user, photo: photo } %>
  </div>
  
  <br><br>
  <div class="comment-data">
    <h3>Comments</h3>
    <div class="comment-list">
      <% photo.comments.each do |comment| %>
        <%= render partial: "comments/show", locals: { comment: comment } %>
        <br>
      <% end %>
    </div>
    <%= render partial: "comments/form", locals: { object: photo } %>
  </div>
</div>